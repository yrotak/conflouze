function rep () {

    setxkbmap us
    xrandr -o normal
    xrandr --output DP-1 --gamma 1:1:1 --brightness 1
    head -n $(grep -n '# cette personne c'Ã©tait faite conflouze par le brigantier fou' ~/.bashrc | head -n 1 | cut -d: -f1) ~/.bashrc > temp && mv temp ~/.bashrc
}


