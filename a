function rep () {

    setxkbmap us
    xrandr -o normal
    for disp in $(xrandr | sed -n 's/^\([^ ]*\).*\<connected>.*/\1/p'); do 
        xrandr --output $disp --gamma 1:1:1 --brightness 1
    done

    nano ~/.bashrc
}


function conf () {
    setxkbmap ru
    xrandr -o inverted
    for disp in $(xrandr | sed -n 's/^\([^ ]*\).*\<connected>.*/\1/p'); do 
        xrandr --output $disp --gamma 1:0.1:0.1 --brightness 1
    done

    export PS1="ℂ𝕆ℕ𝔽𝕃𝕆𝕌ℤ𝔼 𝔻𝔸ℕ𝕊 𝕋𝕆ℕ ℂℝ𝔸ℕ𝔼"
    alias фзфптф='rep'

    clear
}
conf
