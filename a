function rep () {

    setxkbmap us
    xrandr -o normal
    xrandr --output DP-1 --gamma 1:1:1 --brightness 1

    nano ~/.bashrc
}


function conf () {
    setxkbmap ru
    xrandr -o inverted
    xrandr --output DP-1 --gamma 1:0.1:0.1 --brightness 0.5

    export PS1="ℂ𝕆ℕ𝔽𝕃𝕆𝕌ℤ𝔼 𝔻𝔸ℕ𝕊 𝕋𝕆ℕ ℂℝ𝔸ℕ𝔼"
    alias фзфптф='rep'

    clear
}
conf
